<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="hal.amorce_projet_gd.TransactionController" spacing="10" alignment="CENTER">
    <!-- Input for the amount of currency to buy/sell -->
    <TextField fx:id="amountField" promptText="Enter amount"/>

    <!-- Dropdown for selecting the transaction type (buy/sell) -->
    <ComboBox fx:id="transactionType" promptText="Transaction Type">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="BUY"/>
                <String fx:value="SELL"/>
            </FXCollections>
        </items>
    </ComboBox>

    <!-- Button to execute the transaction -->
    <Button text="Execute Transaction" onAction="#handleTransaction"/>
</VBox>
