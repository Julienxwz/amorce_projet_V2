<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="hal.amorce_projet_gd.RegisterController" alignment="CENTER" spacing="10">
    <TextField fx:id="usernameField" promptText="Username"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <Button text="Register" onAction="#handleRegister"/>
    <Label fx:id="registrationMessageLabel"/>
    <Button text="Back to Login" onAction="#switchToLogin"/>
</VBox>
